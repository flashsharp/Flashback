<UserControl
    x:Class="FlashbackUwp.UserControls.ImageViewer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FlashbackUwp.UserControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid Margin="0">
        <Border BorderBrush="{ThemeResource CustomColorBrush}" BorderThickness="2">
            <Image Source="{Binding Image}" Margin="0,0,0,0" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Name="closePopupButton"/>
        </Border>
    </Grid>
</UserControl>
